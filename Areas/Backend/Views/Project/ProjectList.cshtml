@using BASE.Extensions
@model BASE.Areas.Backend.Models.VM_Project
@section CustomScripts{
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
        });

        function Delete(id) {
            Swal.fire({
                title: '提示訊息',
                text: '你是否要刪除計畫？',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '刪除',
                cancelButtonText: '取消',
            }).then((r) => {
                if (r.isConfirmed) {

                    //$.blockUI();

                    //確定刪除
                    $.ajax({
                        type: "Post",
                        url: "@(Url.Action("ProjectDelete", "Project"))",
                        dataType: "json",
                        beforeSend: function (request) {
                            request.setRequestHeader("X-XSRF-TOKEN", $('input[name="__X-XSRFVerificationToken"]').val());
                        },
                        data: { id: id },
                        success: function (result) {
                            //$.unblockUI();
                            inform({
                                plugin: result.alert_plugin,
                                type: result.alert_type,
                                title: result.message,
                                content: result.messageDetail,
                                redirect_url: ""
                            });
                        }
                    });
                } else {
                    //任何方式的取消
                    Swal.fire('刪除', '取消成功', 'success');
                }
            });
        }

        // 清除查詢條件
        function clearSearch() {
            // 群組下拉改為請選擇
            document.getElementById("Search_sCategory").selectedIndex = 0;
            $('#Search_sName').val('');
        }

    </script>
}

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                @using (Html.BeginForm(FormMethod.Get, new { id = "frm", @autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageIndex, new { @class="hiddenCurrentPage" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageCount, new { @class="hiddenPageCount" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_Search, new { @class="pager-Info-Search" })

                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-12 col-md-auto ms-auto">
                            <div class="input-group">
                                @Html.LabelFor(x => x.Search.sName, "計畫名稱：", new { @class="input-group-text" })
                                @Html.TextBoxFor(x => x.Search.sName, new {@class="form-control", placeholder = "",type="text"})

                                @Html.LabelFor(x => x.Search.sCategory, "所屬類別：", new { @class="input-group-text" })
                                @Html.DropDownListFor(x=>x.Search.sCategory,Model.ddlCategory,new{@class="form-control"})


                            </div>
                        </div>
                        <div class="col-12 col-md-auto">
                            <button type="button" class="btn btn-danger float-end" onclick="clearSearch()">清除</button>
                            <button type="submit" class="btn btn-primary float-end">查詢</button>
                        </div>
                    </div>

                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-12 col-md-auto ms-auto">
                            <a class="btn btn-primary" href="@(Url.Action("ProjectAdd", "Project"))">新增</a>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>項次</th>
                                <th>計畫名稱</th>
                                <th>所屬類別</th>
                                <th>課程變更管理</th>
                                <th>管理</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.ProjectExtendList != null && Model.ProjectExtendList.Count > 0)
                            {
                                foreach (var item in Model.ProjectExtendList)
                                {
                                    <tr>
                                        <td>@(Model.ProjectExtendList.IndexOf(item) + 1)</td>
                                        <td>@item.Project.Name</td>
                                        <td>@item.Project.Category</td>
                                        @*@if (Model.MainProject.Contains(item.Project.Name))*@
                                        @if (Model.FixedProjectIds.Contains(item.Project.Id))
                                        {
                                            <td><a class="btn btn-primary" href="@(Url.Action("ProjectModifyList", "ProjectModify", new { id =item.Project.Id }))">管理</a></td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                        <td>
                                            <a class="btn btn-primary" href="@(Url.Action("ProjectEdit", "Project", new { id =item.Project.Id }))">編輯</a>
                                            @*@if (!Model.MainProject.Contains(item.Project.Name))*@
                                            @if (!Model.FixedProjectIds.Contains(item.Project.Id))
                                            {
                                                <button type="button" class="btn btn-danger" onclick="Delete('@(item.Project.Id)')">刪除</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4">目前暫無資料</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model != null && Model.ProjectExtendList != null && Model.ProjectExtendList.Count > 0)
                {
                    @await Html.PartialAsync("_Pagination", Model.Search.PagerInfo)
                }
            </div>
        </div>
    </div>
</div>