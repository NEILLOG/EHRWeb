@model BASE.Areas.Backend.Models.VM_Advertise
@{
}
@section CustomScripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
        @*檔案上傳物件*@
                $('.File').each(function () {
                    $(this).FileInputCus({
                        dropZoneEnabled: false
                    });
                });
        });
    </script>
    }
    <div class="card">
        <div class="card-body">
        @using (Html.BeginForm(FormMethod.Post, new { id = "frm", @autocomplete = "off", @enctype = "multipart/form-data", @data_parsley_validate = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.AdvertiseExtendItem.Advertise.IsPublish, "狀態", new { @class = "form-label" })
                    @Html.DropDownListFor(x=>x.Search.sPublish,Model.ddlPublish,new{@class="form-control",id="ddlPublish"})
                </div>

                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.AdvertiseExtendItem.Advertise.Title, "圖片標題：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.AdvertiseExtendItem.Advertise.Title, new { @class="form-control", placeholder = "" })
                </div>

                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.AdvertiseExtendItem.Advertise.Link, "超連結：網址", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.AdvertiseExtendItem.Advertise.Link, new { @class="form-control", placeholder = "" })
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.AdvertiseExtendItem.Advertise.FileId, "輪播圖片：", new { @class = "form-label" })
                    <span class="red">建議尺寸1300*600 px（建議高度不要大於600px）</span>
                    @Html.TextBoxFor(x => x.AdvertiseImageFile, new { @FileID = "FileId", @class="form-control File", @type = "file", accept = ".pnf,.jpg,.jpeg", data_parsley_file_type="png,jpg,jpeg", data_parsley_errors_container="#FileId-errors-container", data_parsley_required = ""  })
                    @Html.HiddenFor(x => x.AdvertiseExtendItem.Advertise.FileId, new { @id ="FileId" })
                    <div id="FileId-errors-container"></div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <a class="btn btn-light" href="@(Url.Action("AdvertiseList", "Advertise"))">取消</a>
                </div>
            </div>
        }
    </div>
</div>