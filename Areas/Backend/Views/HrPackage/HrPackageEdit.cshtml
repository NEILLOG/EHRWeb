@model BASE.Areas.Backend.Models.VM_HrPackage
@{
}
@section CustomScripts
    {
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script type="text/javascript">

        //報名區間_訖
        $('#HrPackageExtendItem_HrPackage_DisplayDate').daterangepicker({
            singleDatePicker: true,
            locale: {
                format: 'YYYY-MM-DD'
            }
        });

        $(document).ready(function () {
            @*檔案上傳物件*@
                $('.File').each(function () {
                    $(this).FileInputCus({
                        dropZoneEnabled: false
                    });
                });
        });
    </script>
}

    <div class="card">
        <div class="card-body">
        @using (Html.BeginForm(FormMethod.Post, new { id = "frm", @autocomplete = "off", @enctype = "multipart/form-data", @data_parsley_validate = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.HrPackageExtendItem.HrPackage.Title, "標題：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.HrPackageExtendItem.HrPackage.Title, new { @class="form-control", placeholder = "請輸入標題", data_parsley_required = "" })
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.HrPackageExtendItem.HrPackage.DisplayDate, "日期", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.HrPackageExtendItem.HrPackage.DisplayDate, "{0:yyyy-MM-dd}", new { @class="form-control daterange_selector", placeholder = "年/月/日", data_parsley_required = ""})
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.HrPackageExtendItem.HrPackage.FileId, "上傳檔案：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.RelatedFile, new { @FileID = "FileId", @class="form-control File input_activityInfo", @type = "file", data_parsley_errors_container="#FileId-errors-container" })
                    @Html.HiddenFor(x => x.HrPackageExtendItem.HrPackage.FileId, new { @id ="FileId" })
                    <div id="FileId-errors-container"></div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <a class="btn btn-light" href="@(Url.Action("HrPackageList", "HrPackage"))">取消</a>
                </div>
            </div>
        }
    </div>
</div>