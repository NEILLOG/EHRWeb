@using BASE.Extensions
@model BASE.Areas.Backend.Models.VM_News
@section CustomScripts
    {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
        });

        function Delete(id) {
            Swal.fire({
                title: '提示訊息',
                text: '你是否要刪除消息？',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '刪除',
                cancelButtonText: '取消',
            }).then((r) => {
                if (r.isConfirmed) {

                    $.blockUI();

                    //確定刪除
                    $.ajax({
                        type: "Post",
                        url: "@(Url.Action("NewsDelete", "News"))",
                        dataType: "json",
                        beforeSend: function (request) {
                            request.setRequestHeader("X-XSRF-TOKEN", $('input[name="__X-XSRFVerificationToken"]').val());
                        },
                        data: { id: id },
                        success: function (result) {
                            $.unblockUI();
                            inform({
                                plugin: result.alert_plugin,
                                type: result.alert_type,
                                title: result.message,
                                content: result.messageDetail,
                                redirect_url: ""
                            });
                        }
                    });
                } else {
                    //任何方式的取消
                    Swal.fire('刪除', '取消成功', 'success');
                }
            });
        }

        // 清除查詢條件
        function clearSearch() {
            // 群組下拉改為請選擇
            document.getElementById("Search_sCategory").selectedIndex = 0;
            $('#Search_sTitle').val('');
            $('#Search_sTime').val('');
            $('#Search_eTime').val('');
        }

        $(function () {
            $("#Search_sTime").datepicker();
            $("#Search_eTime").datepicker();
        });

        function PublishChange(id) {
            Swal.fire({
                title: '提示訊息',
                text: '是否變更上下架狀態？',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '是',
                cancelButtonText: '否',
            }).then((r) => {
                if (r.isConfirmed) {

                    $.blockUI();

                    //確定變更狀態
                    $.ajax({
                        type: "Post",
                        url: "@(Url.Action("NewsPublishChange", "News"))",
                        dataType: "json",
                        beforeSend: function (request) {
                            request.setRequestHeader("X-XSRF-TOKEN", $('input[name="__X-XSRFVerificationToken"]').val());
                        },
                        data: { id: id },
                        success: function (result) {
                            $.unblockUI();
                            inform({
                                plugin: result.alert_plugin,
                                type: result.alert_type,
                                title: result.message,
                                content: result.messageDetail,
                                redirect_url: ""
                            });
                        }
                    });
                } else {
                    //任何方式的取消
                    Swal.fire('變更狀態', '取消成功', 'success');
                }
            });
        }

    </script>
}

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                @using (Html.BeginForm(FormMethod.Get, new { id = "frm", @autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageIndex, new { @class="hiddenCurrentPage" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageCount, new { @class="hiddenPageCount" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_Search, new { @class="pager-Info-Search" })

                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-12 col-md-auto ms-auto">
                            <div class="input-group">
                                @Html.LabelFor(x => x.Search.sCategory, "類型", new { @class="input-group-text" })
                                @Html.DropDownListFor(x=>x.Search.sCategory,Model.ddlCategory,new{@class="form-control"})

                                @Html.LabelFor(x => x.Search.sTitle, "標題", new { @class="input-group-text" })
                                @Html.TextBoxFor(x => x.Search.sTitle, new {@class="form-control", placeholder = "請輸入標題",type="text"})

                                @Html.LabelFor(x => x.Search.sTime, "時間區間", new { @class="input-group-text" })
                                @Html.TextBoxFor(x => x.Search.sTime, new {@class="form-control", placeholder = "請輸入時間起",type="text"})
                                @Html.TextBoxFor(x => x.Search.eTime, new {@class="form-control", placeholder = "請輸入時間迄",type="text"})

                            </div>
                        </div>
                        <div class="col-12 col-md-auto">
                            <button type="button" class="btn btn-danger float-end" onclick="clearSearch()">清除</button>
                            <button type="submit" class="btn btn-primary float-end">查詢</button>
                        </div>
                    </div>

                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-12 col-md-auto">
                            <a class="btn btn-primary" href="@(Url.Action("NewsAdd", "News"))">新增</a>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>項次</th>
                                <th>標題</th>
                                <th>類型</th>
                                <th>日期</th>
                                <th>狀態</th>
                                <th>管理</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.NewsExtendList != null && Model.NewsExtendList.Count > 0)
                            {
                                foreach (var item in Model.NewsExtendList)
                                {
                                    <tr>
                                        <td>@(Model.NewsExtendList.IndexOf(item) + 1)</td>
                                        <td>@Html.Raw(item.News.Title)</td>
                                        <td>@Html.Raw(item.News.Category)</td>
                                        <td>@Html.Raw(item.News.DisplayDate.ToString("yyyy-MM-dd"))</td>
                                        @{
                                            string Status = string.Empty;
                                            string ButtonInfo = string.Empty;
                                            if (item.News.IsPublish)
                                            {
                                                Status = "上架中";
                                                ButtonInfo = "下架";
                                            }
                                            else
                                            {
                                                Status = "已下架";
                                                ButtonInfo = "上架";
                                            }
                                        }
                                        <td style="max-width:55vw;">@Status</td>
                                        <td>
                                            <a class="btn btn-primary" href="@(Url.Action("NewsEdit", "News", new { id =item.News.Id }))">編輯</a>
                                            <button type="button" class="btn btn-primary" onclick="PublishChange('@(item.News.Id)')">@ButtonInfo</button>
                                            <button type="button" class="btn btn-danger" onclick="Delete('@(item.News.Id)')">刪除</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4">目前暫無資料</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model != null && Model.NewsExtendList != null && Model.NewsExtendList.Count > 0)
                {
                    @await Html.PartialAsync("_Pagination", Model.Search.PagerInfo)
                }
            </div>
        </div>
    </div>
</div>