@model BASE.Areas.Backend.Models.VM_News
@{
}
@section CustomScripts
    {

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script type="text/javascript">

        //報名區間_訖
        $('#NewsExtendItem_News_DisplayDate').daterangepicker({
            singleDatePicker: true,
            locale: {
                format: 'YYYY-MM-DD'
            }
        });

        $(document).ready(function () {
            @*檔案上傳物件*@
                $('.File').each(function () {
                    $(this).FileInputCus({
                        dropZoneEnabled: false
                    });
                });
        });
    </script>
}

    <div class="card">
        <div class="card-body">
        @using (Html.BeginForm(FormMethod.Post, new { id = "frm", @autocomplete = "off", @enctype = "multipart/form-data", @data_parsley_validate = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">

                @if (Model.TopId.Count > 0)
                {
                    <div class="col-12 form-group mb-3">
                        @Html.LabelFor(x => x.NewsExtendItem.News.IsKeepTop, "是否置頂", new { @class = "form-label" })
                        @Html.RadioButtonFor(x=>x.NewsExtendItem.News.IsKeepTop,true,new{@id="KeepTop",disabled = "disabled"})是
                        @Html.RadioButtonFor(x=>x.NewsExtendItem.News.IsKeepTop,false,new{@id="KeepTop",disabled = "disabled",Checked = "checked"})否
                    </div>
                }
                else
                {
                    <div class="col-12 form-group mb-3">
                        @Html.LabelFor(x => x.NewsExtendItem.News.IsKeepTop, "是否置頂", new { @class = "form-label" })
                        @Html.RadioButtonFor(x=>x.NewsExtendItem.News.IsKeepTop,true,new{@id="KeepTop"})是
                        @Html.RadioButtonFor(x=>x.NewsExtendItem.News.IsKeepTop,false,new{@id="KeepTop",Checked = "checked"})否
                    </div>
                }

                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.isPublish, "狀態", new { @class = "form-label" })
                    @Html.DropDownListFor(x=>x.isPublish,Model.ddlPublish,new{@class="form-control",id="ddlPublish", data_parsley_errors_container="#errors-container-1" })
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.NewsExtendItem.News.Title, "標題：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.NewsExtendItem.News.Title, new { @class="form-control", placeholder = "請輸入標題", data_parsley_required = "" })
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.NewsExtendItem.News.Category, "類型", new { @class = "form-label" })
                    @Html.DropDownListFor(x=>x.NewsExtendItem.News.Category,Model.ddlCategory,new{@class="form-control",id="ddlCategory", data_parsley_required = "", data_parsley_errors_container="#errors-container-1" })
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.NewsExtendItem.News.DisplayDate, "日期", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.NewsExtendItem.News.DisplayDate, new { @class="form-control daterange_selector", placeholder = "年/月/日", data_parsley_required = ""})
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.NewsExtendItem.News.Contents, "內容", new { @class = "form-label" })
                    @Html.TextAreaFor(x => x.NewsExtendItem.News.Contents, new { @class = "form-control", data_parsley_required = "" })
                </div>

                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.NewsExtendItem.News.FileId, "上傳圖片：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.NewsFile, new { @FileID = "FileId", @class="form-control File", @type = "file", accept = ".pnf,.jpg,.jpeg", data_parsley_file_type="png,jpg,jpeg", data_parsley_errors_container="#FileID-errors-container" })
                    @Html.HiddenFor(x => x.NewsExtendItem.News.FileId, new { @id ="FileId" })
                    <div id="FileID-errors-container"></div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <a class="btn btn-light" href="@(Url.Action("NewsList", "News"))">取消</a>
                </div>
            </div>
        }
    </div>
</div>