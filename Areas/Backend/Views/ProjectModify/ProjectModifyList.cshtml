@using BASE.Extensions
@model BASE.Areas.Backend.Models.VM_ProjectModify
@section CustomScripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
        @*檔案上傳物件*@
                $('.File').each(function () {
                    $(this).FileInputCus({
                        dropZoneEnabled: false
                    });
                });
        });

        function ApproveSave(id) {
            Swal.fire({
                title: '提示訊息',
                text: '是否儲存？',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '是',
                cancelButtonText: '否',
            }).then((r) => {
                if (r.isConfirmed) {

                     $.blockUI();

                    //確定變更狀態
                    $.ajax({
                        type: "Post",
                        url: "@(Url.Action("ProjectModifySave", "ProjectModify"))",
                        dataType: "json",
                        beforeSend: function (request) {
                            request.setRequestHeader("X-XSRF-TOKEN", $('input[name="__X-XSRFVerificationToken"]').val());
                        },
                        data: { id: id, ApproveStatus: document.getElementById("ddlApprove").value },
                        success: function (result) {
                              $.unblockUI();
                            inform({
                                plugin: result.alert_plugin,
                                type: result.alert_type,
                                title: result.message,
                                content: result.messageDetail,
                                redirect_url: ""
                            });
                        }
                    });
                } else {
                    //任何方式的取消
                    Swal.fire('變更狀態', '取消成功', 'success');
                }
            });
        }

    </script>
}

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                @using (Html.BeginForm(FormMethod.Get, new { id = "frm", @autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                }
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>序號</th>
                                <th>信箱</th>
                                <th>課程變更申請單上傳日期</th>
                                <th>課程變更申請單上傳時間</th>
                                <th>課程變更申請單內容</th>
                                <th>管理</th>
                                <th>經辦人</th>
                                <th>經辦日期</th>
                                <th>經辦時間</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.ProjectModifyExtendList != null && Model.ProjectModifyExtendList.Count > 0)
                            {
                                int i = 0;
                                foreach (var item in Model.ProjectModifyExtendList)
                                {

                                    <tr>
                                        <td>@(Model.ProjectModifyExtendList.IndexOf(item) + 1)</td>
                                        <td>@item.ProjectModify.Email</td>
                                        <td>@item.ProjectModify.CreateDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.ProjectModify.CreateDate.ToString("HH:mm")</td>

                                        <td>
                                            @{
                                                string DownloadName = "課程變更申請單";
                                                //if (Model.ProjectModifyExtendList[i].FileName != null && Model.ProjectModifyExtendList[i].FileName.Split('.').Length > 1)
                                                //{ DownloadName = Model.ProjectModifyExtendList[i].FileName.Split('.')[0]; }
                                            }
                                            <a class="btn btn-sm btn-default " title="下載檔案" href="@Model.ProjectModifyExtendList[i].FilePath" download="@(DownloadName)" target="_blank"><i class="bi-download"></i></a>
                                        </td>

                                        <td style="max-width:100vw;">
                                            @if (item.ProjectModify.IsApprove == null)
                                            {
                                                @Html.DropDownListFor(x=>x.IsApprove,Model.ddlApprove,new{@class="form-control",id="ddlApprove", data_parsley_required = "", data_parsley_errors_container="#errors-container-1" })
                                                <button type="button" class="btn btn-success" onclick="ApproveSave('@(item.ProjectModify.Id)')">儲存並寄送通知</button>
                                            }
                                            else
                                            {
                                                String ApproveStatus = string.Empty;
                                                if (item.ProjectModify.IsApprove ?? false)
                                                { ApproveStatus = "同意"; }
                                                else
                                                { ApproveStatus = "不同意"; }
                                                @ApproveStatus
                                            }
                                        </td>
                                        <td>@item.ProjectModify.ModifyUser</td>
                                        @{
                                            string ModifyDate = string.Empty;
                                            string ModifyTime = string.Empty;
                                            if (item.ProjectModify.ModifyDate != null)
                                            {
                                                DateTime TransDT = item.ProjectModify.ModifyDate ?? Convert.ToDateTime("1900/01/01");
                                                ModifyDate = TransDT.ToString("yyyy-MM-dd");
                                                ModifyTime = TransDT.ToString("HH:mm");
                                            }
                                        }
                                        <td>@ModifyDate</td>
                                        <td>@ModifyTime</td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr><td colspan="4">目前暫無資料</td></tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model != null && Model.ProjectModifyExtendList != null && Model.ProjectModifyExtendList.Count > 0)
                {
                    @await Html.PartialAsync("_Pagination", Model.Search.PagerInfo)
                }
            </div>
        </div>
    </div>
</div>