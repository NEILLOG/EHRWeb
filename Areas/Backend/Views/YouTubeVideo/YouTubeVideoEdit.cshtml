@model BASE.Areas.Backend.Models.VM_YouTubeVideo
@{
}

@section CustomScripts
    {
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script type="text/javascript">

        //報名區間_訖
        $('#YouTubeVideoExtendItem_YouTubeVideo_DisplayDate').daterangepicker({
            singleDatePicker: true,
            locale: {
                format: 'YYYY-MM-DD'
            }
        });

    </script>
    }
    <div class="card">
        <div class="card-body">
        @using (Html.BeginForm(FormMethod.Post, new { id = "frm", @autocomplete = "off", @enctype = "multipart/form-data", @data_parsley_validate = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.YouTubeVideoExtendItem.YouTubeVideo.IsPublish, "狀態", new { @class = "form-label" })
                    @Html.DropDownListFor(x=>x.Search.sPublish,Model.ddlPublish,new{@class="form-control",id="ddlPublish"})
                </div>

                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.YouTubeVideoExtendItem.YouTubeVideo.Title, "標題：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.YouTubeVideoExtendItem.YouTubeVideo.Title, new { @class="form-control", placeholder = "請輸入標題", data_parsley_required = "" })
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.YouTubeVideoExtendItem.YouTubeVideo.DisplayDate, "日期", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.YouTubeVideoExtendItem.YouTubeVideo.DisplayDate,"{0:yyyy-MM-dd}", new { @class="form-control daterange_selector", placeholder = "年/月/日", data_parsley_required = ""})
                </div>

                <div class="col-12 form-group mb-3">
                    @Html.LabelFor(x => x.YouTubeVideoExtendItem.YouTubeVideo.YouTubeId, "Youtube連結：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.YouTubeVideoExtendItem.YouTubeVideo.YouTubeId, new { @class="form-control", placeholder = "請輸入影片ID", data_parsley_required = "" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <a class="btn btn-light" href="@(Url.Action("YouTubeVideoList", "YouTubeVideo"))">取消</a>
                </div>
            </div>
        }
    </div>
</div>