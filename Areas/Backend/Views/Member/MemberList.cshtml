@using BASE.Extensions
@model BASE.Areas.Backend.Models.VM_Member
@section CustomScripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
        });

        function Delete(id) {
            Swal.fire({
                title: '提示訊息',
                text: '你是否要刪除帳號？',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '刪除',
                cancelButtonText: '取消',
            }).then((r) => {
                if (r.isConfirmed) {

                    $.blockUI();

                    //確定刪除
                    $.ajax({
                        type: "Post",
                        url: "@(Url.Action("MemberDelete", "Member"))",
                        dataType: "json",
                        beforeSend: function (request) {
                            request.setRequestHeader("X-XSRF-TOKEN", $('input[name="__X-XSRFVerificationToken"]').val());
                        },
                        data: { id: id },
                        success: function (result) {
                            $.unblockUI();
                            inform({
                                plugin: result.alert_plugin,
                                type: result.alert_type,
                                title: result.message,
                                content: result.messageDetail,
                                redirect_url: ""
                            });
                        }
                    });
                } else {
                    //任何方式的取消
                    Swal.fire('刪除', '取消成功', 'success');
                }
            });
        }

        // 清除查詢條件
        function clearSearch()
        {
            // 群組下拉改為全部
            document.getElementById("Search_sGroup").selectedIndex = 0; 
            // 使用者查詢清空
            $('#Search_Keyword').val('');
        }
        // 匯出帳號列表
        function Export() {
            $('#frm').attr('action', '@(Url.Action("MemberExport", "Member"))').attr('method', 'post');
            $('#frm').submit();
        }

        const import_file = () => {
            $('#import_file_selector').click();
        }

        $('#import_file_selector').on('change', function () {
            Swal.fire({
                title: '提示訊息',
                text: '是否確定匯入？',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '確定',
                cancelButtonText: '取消',
            }).then((r) => {
                if (r.isConfirmed) {
                    console.log($(this)[0].files[0])
                    var formData = new FormData();
                    formData.append('file', $(this)[0].files[0]); // myFile is the input type="file" control

                    $.blockUI();

                    $.ajax({
                        type: "Post",
                        url: "@(Url.Action("ConsultantImport", "Member"))",
                        data: formData,
                        processData: false,  // tell jQuery not to process the data
                        contentType: false,  // tell jQuery not to set contentType
                        beforeSend: function (request) {
                            request.setRequestHeader("X-XSRF-TOKEN", $('input[name="__X-XSRFVerificationToken"]').val());
                        },
                        success: function (result) {
                            $.unblockUI();
                            inform({
                                plugin: result.alert_plugin,
                                type: result.alert_type,
                                title: result.message,
                                content: result.messageDetail,
                                redirect_url: ""
                            });
                        }
                    });
                } else {
                    //任何方式的取消
                    Swal.fire('匯入', '取消成功', 'success');
                    $('#import_file_selector').val('');
                }
            });
        });
    </script>
}

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                @using (Html.BeginForm(FormMethod.Get, new { id = "frm", @autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageIndex, new { @class="hiddenCurrentPage" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageCount, new { @class="hiddenPageCount" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_Search, new { @class="pager-Info-Search" })

                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-12 col-md-auto">
                            <div class="input-group">
                                @Html.LabelFor(x => x.Search.sGroup, "帳號群組", new { @class="input-group-text" })
                                @Html.DropDownListFor(x=>x.Search.sGroup,Model.ddlGroup,new{@class="form-control"})
                                @Html.LabelFor(x => x.Search.Keyword, "使用者名稱", new { @class="input-group-text" })
                                @Html.TextBoxFor(x => x.Search.Keyword, new { @type="text", @class="form-control", @placeholder="請輸入使用者名稱", @aria_label="使用者名稱" })
                            </div>
                        </div>
                        <div class="col-12 col-md-auto">
                            <button type="button" class="btn btn-danger float-end" onclick="clearSearch()">清除</button>
                            <button type="submit" class="btn btn-primary float-end">查詢</button>
                        </div>
                    </div>
                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-12 col-md-auto ">
                            <a class="btn btn-primary" href="@Url.Action("DownloadFile", "Common",new{filePath="Sample\\",fileName= EncryptService.AES.Encrypt("Sample_Consultant.xls")})" title="下載國立臺灣大學校友證代辦委託書.doc">下載顧問範例檔案</a>
                            <a class="btn btn-success" onclick="import_file();">匯入顧問資料</a>
                            @Html.TextBoxFor(x=>x.ImportFile, new { type="file", @class="d-none", id="import_file_selector", accept=".xlsx" })
                        </div>
                        <div class="col-12 col-md-auto ms-auto">
                            <a class="btn btn-primary" href="@(Url.Action("MemberAdd", "Member"))">新增</a>
                            <button type="button" class="btn btn-success" onclick="Export()">匯出Excel</button>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>序號</th>
                                <th>姓名</th>
                                <th>群組</th>
                                <th>帳號</th>
                                <th>啟用</th>
                                <th>管理</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.MemberExtendList != null && Model.MemberExtendList.Count > 0)
                            {
                                foreach (var item in Model.MemberExtendList)
                                {
                                    <tr>
                                        <td>@(Model.MemberExtendList.IndexOf(item) + 1)</td>
                                        <td style="max-width:30vw;">@item.userinfo.UserName</td>
                                        <td style="max-width:55vw;">@item.groupInfo.GroupName</td>
                                        <td style="max-width:30vw;">@item.userinfo.Account</td>
                                        <td style="max-width:30vw;">@(item.userinfo.IsActive ? "是":"否")</td>
                                        <td>
                                            <a class="btn btn-primary" href="@(Url.Action("MemberEdit", "Member", new { id = EncryptService.AES.RandomizedEncrypt(item.userinfo.UserId) }))">編輯</a>
                                            @if (item.groupInfo.GroupId != "G000000001"){
                                                <button type="button" class="btn btn-danger" onclick="Delete('@(EncryptService.AES.RandomizedEncrypt(item.userinfo.UserId))')">刪除</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="6">目前暫無資料</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model != null && Model.MemberExtendList != null && Model.MemberExtendList.Count > 0)
                {
                    @await Html.PartialAsync("_Pagination", Model.Search.PagerInfo)
                }
            </div>
        </div>
    </div>
</div>