
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <!-- The above 6 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>@_conf["Site:Name"] - @ViewData["Title"]</title>

    <!-- Styles -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">
    <link href="~/lib/bootstrap/v5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/areas/backend/template/base/plugins/perfectscroll/perfect-scrollbar.css" rel="stylesheet">
    <link href="~/areas/backend/template/base/plugins/pace/pace.css" rel="staylesheet">
    

    <!-- Theme Styles -->
    <link href="~/areas/backend/template/base/css/main.css" rel="stylesheet" asp-append-version="true">
    <link href="~/areas/backend/template/base/css/custom.css" rel="stylesheet" asp-append-version="true">

    <link rel="icon" type="image/png" sizes="32x32" href="~/areas/backend/template/base/images/neptune.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/areas/backend/template/base/images/neptune.png" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- sweetalert2 -->
    <link href="~/lib/sweetalert2/v11.x/dist/sweetalert2.min.css" rel="stylesheet">

    <!-- toastr -->
    <link href="~/lib/toastr/dist/toastr.min.css" rel="stylesheet">

    @await RenderSectionAsync("CustomCss", required: false)
</head>
<body>
    @RenderBody()

    <!-- Javascripts -->
    <script src="~/lib/jquery/v3.6.0/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/v5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/areas/backend/template/base/plugins/perfectscroll/perfect-scrollbar.min.js"></script>
    <script src="~/areas/backend/template/base/plugins/pace/pace.min.js"></script>
    <script src="~/areas/backend/template/base/js/main.min.js"></script>
    <script src="~/areas/backend/template/base/js/custom.js"></script>

    <!-- sweetalert2 -->
    <script src="~/lib/sweetalert2/v11.x/dist/sweetalert2.all.min.js"></script>

     <!-- toastr -->
    <script src="~/lib/toastr/dist/toastr.min.js"></script>

    @*提示訊息*@
    @if (TempData["TempMsg"] != null)
    {
        String Type = "info";
        if (TempData["TempMsgType"] != null)
        {
            switch ((MsgTypeEnum)TempData["TempMsgType"])
            {
                case MsgTypeEnum.error: Type = "error"; break;
                case MsgTypeEnum.info: Type = "info"; break;
                case MsgTypeEnum.success: Type = "success"; break;
                case MsgTypeEnum.warning: Type = "warning"; break;
                default:
                    Type = "error";
                    break;
            }
        }
        switch ((string?)TempData["TempPlugin"])
        {
            case "toastr":
                <script type="text/javascript">
                    $(document).ready(function () {
                        toastr["@Type"]("@TempData["TempMsg"]","@TempData["TempMsgDetail"]");
                    });
                </script>
                break;
            default:
                <script type="text/javascript">
                    $(document).ready(function () {
                        Swal.fire({
                            title: '@TempData["TempMsg"]',
                            text: '@TempData["TempMsgDetail"]',
                            //timer: 3000,
                            //showConfirmButton: true,
                            icon: '@Type'
                        });
                    });
                </script>
                break;
        }
        
        TempData["TempMsg"] = null;
    }

    @await RenderSectionAsync("CustomScripts", required: false)
</body>
</html>