@model BASE.Areas.Backend.Models.VM_Home
@{
    Layout = "~/Areas/Backend/Views/Shared/_Layout_SourceOnly.cshtml";
    ViewData["Title"] = "ForgetPassword";
}

@section CustomScripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

<div class="app app-auth-sign-in align-content-stretch d-flex flex-wrap justify-content-end">
    <div class="app-auth-background">
    </div>
    <div class="app-auth-container">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="logo">
                <a href="">@_conf["Site:Name"]</a>
            </div>

            <div class="auth-credentials m-b-xxl">
                @Html.LabelFor(x => x.acct, "帳號", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.acct, new { @class = "form-control", placeholder = "請輸入帳號", data_parsley_required = "" })

                @Html.LabelFor(x => x.email, "信箱", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control", placeholder = "請輸入信箱", data_parsley_required = "" })
            </div>

            <div class="auth-submit">
                <button type="submit" class="btn btn-primary">送出</button>
            </div>
        </form>

    </div>
</div>