@model BASE.Areas.Backend.Models.VM_Album
@{
}

@section CustomScripts
    {
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script type="text/javascript">

        //報名區間_訖
        $('#AlbumExtendItem_Album_DisplayDate').daterangepicker({
            singleDatePicker: true,
            locale: {
                format: 'YYYY-MM-DD'
            }
        });
    </script>
    }

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm(FormMethod.Post, new { id = "frm", @autocomplete = "off", @enctype = "multipart/form-data", @data_parsley_validate = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.AlbumExtendItem.Album.Title, "標題：", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.AlbumExtendItem.Album.Title, new { @class="form-control", placeholder = "", data_parsley_required = "" })
                </div>

                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.AlbumExtendItem.Album.DisplayDate, "日期", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.AlbumExtendItem.Album.DisplayDate, new { @class="form-control daterange_selector", placeholder = "年/月/日", data_parsley_required = ""})
                </div>
                
                <div class="col-12 form-group mb-3">
                    <span class="red">*</span>
                    @Html.LabelFor(x => x.AlbumExtendItem.Album.FileId, "圖片檔案：", new { @class = "form-label" })
                    <span class="red">(建議尺寸：350*225)</span>
                    @Html.TextBoxFor(x => x.AlbumImageFile, new { @FileID = "FileId", @class="form-control File", @type = "file", accept = ".pnf,.jpg,.jpeg", data_parsley_file_type="png,jpg,jpeg", data_parsley_errors_container="#ActivityImage-errors-container" })
                    @Html.HiddenFor(x => x.AlbumExtendItem.Album.FileId, new { @id ="FileId" })
                    <div id="ActivityImage-errors-container"></div>
                </div>
            
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <a class="btn btn-light" href="@(Url.Action("AlbumList", "Album"))">取消</a>
                </div>
            </div>
        }
    </div>
</div>