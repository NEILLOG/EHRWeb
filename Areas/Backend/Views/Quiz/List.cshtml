@using BASE.Extensions
@model BASE.Areas.Backend.Models.VM_Quiz
@section CustomScripts
{
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Search_sTime").datepicker({ dateFormat: 'yy/mm/dd' });
        $("#Search_eTime").datepicker({ dateFormat: 'yy/mm/dd' });
    });

    function Delete(id) {
        Swal.fire({
            title: '提示訊息',
            text: '你是否要刪除問卷？',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '刪除',
            cancelButtonText: '取消',
        }).then((r) => {
            if (r.isConfirmed) {

                $.blockUI();

                //確定刪除
                $.ajax({
                    type: "Post",
                        url: "@(Url.Action("Delete", "Quiz"))",
                    dataType: "json",
                    beforeSend: function(request) {
                       request.setRequestHeader("X-XSRF-TOKEN", $('input[name="__X-XSRFVerificationToken"]').val());
                    },
                    data: { id: id },
                    success: function (result) {
                        $.unblockUI();
                        inform({
                            plugin: result.alert_plugin,
                            type: result.alert_type,
                            title: result.message,
                            content: result.messageDetail,
                            redirect_url: ""
                        });
                    }
                });
            } 
        });
    }
</script>
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm(FormMethod.Get, new { id = "frm", @autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageIndex, new { @class="hiddenCurrentPage" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageCount, new { @class="hiddenPageCount" })
                    @Html.HiddenFor(x => x.Search.PagerInfo.m_Search, new { @class="pager-Info-Search" })

                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-12 col-md-auto">
                            <a class="btn btn-primary" href="@(Url.Action("Add", "Quiz"))">新增</a>
                        </div>
                        <div class="col-12 col-md-auto ms-auto">
                            <div class="input-group">
                                @Html.LabelFor(x => x.Search.Keyword, "關鍵字", new { @class="input-group-text" })
                                @Html.TextBoxFor(x => x.Search.Keyword, new { @type="text", @class="form-control", @placeholder="請輸入關鍵字", @aria_label="關鍵字" })

                                @Html.LabelFor(x => x.Search.sTime, "時間區間", new { @class="input-group-text" })
                                @Html.TextBoxFor(x => x.Search.sTime, new {@class="form-control", placeholder = "請輸入時間起",type="text"})
                                @Html.TextBoxFor(x => x.Search.eTime, new {@class="form-control", placeholder = "請輸入時間起",type="text"})

                            </div>
                        </div>
                        <div class="col-12 col-md-auto">
                            <button type="submit" class="btn btn-primary float-end">查詢</button>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>項次</th>
                                <th>問卷名稱</th>
                                <th>建立日期</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.ExtendList != null && Model.ExtendList.Count > 0)
                            {
                                foreach (var item in Model.ExtendList)
                                {
                                   <tr>
                                        <td>@(Model.ExtendList.IndexOf(item) + 1)</td>
                                       <td style="max-width:30vw;">@item.Header.Name</td>                                       
                                       <td style="max-width:55vw;">@item.Header.CreateDate.ToString("yyyy/MM/dd")</td>
                                       <td>
                                           <a class="btn btn-primary" href="@(Url.Action("Edit", "Quiz", new { id = EncryptService.AES.RandomizedEncrypt(item.Header.Id) }))">編輯</a>
                                           <button type="button" class="btn btn-danger" onclick="Delete('@(EncryptService.AES.RandomizedEncrypt(item.Header.Id))')">刪除</button>
                                       </td>
                                   </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4">目前暫無資料</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model != null && Model.ExtendList != null && Model.ExtendList.Count > 0)
                {
                    @await Html.PartialAsync("_Pagination", Model.Search.PagerInfo)
                }
            </div>
        </div>
    </div>
</div>