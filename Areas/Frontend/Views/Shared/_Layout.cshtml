    <script>
        $(document).ready(function(){

            $('.PlayValidCodeSubscript').click(function () {
                var audio = document.getElementById("playerSubscript'");
                audio.play();
                return false;
            });

            $('#btnSendSubscript').click(function(){
                var token = $(this).siblings('input:hidden[name="__X-XSRFVerificationToken"]').val();
                var email = $('#txtSubscriptEmail').val();
                var validnum = $('#txtValidNum').val();
                var rule = $('#ckbRule');
                var checks = [];
                $('.ckbSubScriptType').each(function () {
                    if (this.checked)
                        checks.push($(this).val());
                });
                
                var isVerify = false;
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ajaxValidVerify", "Home")',
                    async: false,
                    data: { UserInput: validnum, type: 'Subscript' },
                    success: function (response) {
                        isVerify = response.isSuccess;
                    }
                });

                if(email == '')
                    Swal.fire('請輸入您的訂閱信箱');
                else if(checks.length <= 0)
                    Swal.fire('請選擇至少一個訂閱項目');
                else if(!rule.is(':checked'))
                    Swal.fire('請確認您是否同意我們的條款及隱私權規範');
                else if (isVerify == false)
                    Swal.fire('驗證碼錯誤');
                else
                {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("ajaxSubscript", "Home")',
                        data: {
                            email: email,
                            types: checks
                        },
                        beforeSend: function (xhr) {
                            xhr.setRequestHeader("X-XSRF-TOKEN", token);
                        },
                        success: function (response) {
                            Swal.fire({
                                icon: response.isSuccess ? 'success' : 'error',
                                text: response.message,
                            }).then((result) => {
                                if (response.isSuccess)
                                    location.reload();
                            });
                        }
                    });
                }
            });
        });
    </script>

    <script>
        $(function () {
            var $radios = $('input:radio[name=inlineRadioOptions]');
            if ($radios.is(':checked') === false) {
                $radios.filter('[value=iconRadio]').click();
                var radioValue = $radios.filter('[value=iconRadio]').click().attr("value");
                var targetRadio = $("." + radioValue);
                $(targetRadio).show();
            }
            $('input[type="radio"]').click(function () {
                var inputValue = $(this).attr("value");
                var targetBox = $("." + inputValue);
                $(".viewhidden").not(targetBox).hide();
                $(targetBox).show();
            });
        });
    </script>

    <script>
