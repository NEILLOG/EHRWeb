    <script>
        var btn = $('#gotopbutton');

        $(window).scroll(function () {
            if ($(window).scrollTop() > 300) {
                btn.addClass('show');
            } else {
                btn.removeClass('show');
            }
        });

        btn.on('click', function (e) {
            e.preventDefault();
            $('html, body').animate({ scrollTop: 0 }, '200');
        });
    </script>

    @*提示訊息*@
    @if (TempData["TempMsg"] != null)
    {
        string Type = "alert";
        string ModalName = "msgmodal";

        if (TempData["TempMsgType"] != null)
        {
            @*alert, error, check*@
            switch ((MsgTypeEnum)TempData["TempMsgType"])
            {
                case MsgTypeEnum.error: Type = "error"; break;
                case MsgTypeEnum.info: Type = "alert"; break;
                case MsgTypeEnum.success: Type = "check"; break;
                case MsgTypeEnum.warning: Type = "alert"; break;
            }
        }

        switch ((string?)TempData["TempPlugin"])
        {
            case "toastr":
                <script type="text/javascript">
                    $(document).ready(function () {
                        toastr["@Type"]("@TempData["TempMsg"]", "@TempData["TempMsgDetail"]");
                    });
                </script>
                break;
            default:
                <script type="text/javascript">
                    $(document).ready(function () {
                        Swal.fire({
                            title: '@TempData["TempMsg"]',
                            text: '@TempData["TempMsgDetail"]',
                            icon: '@Type'
                        });
                    });
                </script>
                break;
        }

    }

