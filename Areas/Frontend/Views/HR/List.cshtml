@using BASE.Service
@model BASE.Areas.Frontend.Models.VM_HR

@await Html.PartialAsync("_BannerPartial", new BASE.Areas.Frontend.Models.Extend.BannerPartial(){ Main = "人資小幫手", Detail = Model.Search.Category })

<form method="post" id="frm" autocomplete="off">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageIndex, new { @class="hiddenCurrentPage" })
    @Html.HiddenFor(x => x.Search.PagerInfo.m_iPageCount, new { @class="hiddenPageCount" })
    @Html.HiddenFor(x => x.Search.PagerInfo.m_Search, new { @class="pager-Info-Search" })
    @Html.HiddenFor(x => x.Search.Category)
</form>

<!-- ================================================== -->
<!-- 人資小幫手 -->
<!-- ================================================== -->
<div class="section pb-md-4 py-lg-5">
    <div class="container">
        <div class="row">
            <!-- 左邊按鈕區塊 -->
            <div class="col-lg-3 col-12">
                <div class="activityBtn bg-white p-3">
                    <a accesskey="L" href="#" title="左方功能區塊" class="sr-only sr-only-focusable">:::</a>
                    <ul class="nav nav-tabs flex-column" id="HRToolBoxTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a href="@Url.Action("List", new { id = "HR知識充電站"})" class="nav-link @(Model.Search.Category == "HR知識充電站" ? "active" : "")">
                                <i class="fa-solid fa-lightbulb me-2" aria-hidden="true"></i>HR知識充電站
                            </a>
                        </li>
                        <hr class="dropdown-divider">
                        <a class="btn w-100 collapsed" data-bs-toggle="collapse" href="#collapseHRtoolbox" role="button" aria-expanded="false" aria-controls="collapseHRtoolbox" id="hrtoolbox">
                            <i class="fa-solid fa-screwdriver-wrench me-2" aria-hidden="true"></i>
                            HR工具箱
                            <i class="fa-solid fa-chevron-down ms-2" aria-hidden="true"></i>
                        </a>
                        <div class="collapse" id="collapseHRtoolbox">
                            <ul class="nav nav-tabs flex-column" id="HRTab" role="tablist">
                                <li><hr class="dropdown-divider"></li>
                                <li class="nav-item" role="presentation">
                                    <a href="@Url.Action("Manual")" class="nav-link">HR工具說明書</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a href="@Url.Action("Packages")" class="nav-link">HR材料包</a>
                                </li>
                            </ul>
                        </div>
                        <hr class="dropdown-divider">
                        <li class="nav-item" role="presentation">
                            <a href="@Url.Action("List", new { id = "成功案例分享"})" class="nav-link @(Model.Search.Category == "成功案例分享" ? "active" : "")">
                                <i class="fa-solid fa-user-gear me-2" aria-hidden="true"></i>成功案例分享
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- 右邊內容區塊 -->
            <div class="col-lg-9 col-12">
                <a accesskey="C" href="#" title="中央內容區塊" class="sr-only sr-only-focusable">:::</a>

                <ul class="hr-charger">
                    @foreach(var item in Model.ExtendList)
                    {
                        <li>
                            <a href="@Url.Action("Detail", new { id = EncryptService.AES.RandomizedEncrypt(item.Header.Id.ToString()) })" class="item">
                                <div class="title fw-bold">
                                    @item.Header.Title
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between px-2">
                                    <div class="date">
                                        <i class="fa-regular fa-calendar-days me-2 fc-ored" aria-hidden="true"></i>
                                        @item.Header.CreateDate.ToString("yyyy / MM / dd")
                                    </div>
                                    <div class="morebtn">
                                        <span class="me-2">詳細內容</span>
                                        <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>

                <div class="mt-5">
                    @await Html.PartialAsync("_Pagination", Model.Search.PagerInfo)
                </div>
               
            </div>
        </div>
    </div>
</div>